@model JobPortal.Data.Entities.Job

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Employer/Views/Shared/_EmployerLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <div class="card-body">
            <h5 class="card-header">Create Job</h5>

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" id="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TitleName" class="control-label"></label>
                            <input asp-for="TitleName" class="form-control" />
                            <span asp-validation-for="TitleName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShortDescription" class="control-label"></label>
                            <input asp-for="ShortDescription" class="form-control" />
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MinAge" class="control-label"></label>
                            <input asp-for="MinAge" class="form-control" />
                            <span asp-validation-for="MinAge" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaxAge" class="control-label"></label>
                            <input asp-for="MaxAge" class="form-control" />
                            <span asp-validation-for="MaxAge" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input style="background-color: forestgreen" onclick="onConfirm()" type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <br />
            <div>
                <a style="background-color: gray" class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>







@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
